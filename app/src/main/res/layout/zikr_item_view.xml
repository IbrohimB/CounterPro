<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvZikrContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/average_item_height"
    android:layout_margin="@dimen/small_menu_list_margin"
    android:padding="@dimen/zikr_item_padding"
    app:cardBackgroundColor="@color/dark_grey"
    app:cardCornerRadius="@dimen/rounded_4">

    <TextView
        android:id="@+id/tvZikr"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

</androidx.cardview.widget.CardView>